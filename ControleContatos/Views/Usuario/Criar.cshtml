@model UsuarioModel

@{
    ViewData["Title"] = "Criar Usuários";
}


<div class="text-center">
    <h1 class="display-4">Cadastrar Usuário</h1>

</div>

<form asp-controller="Contato" asp-action="Criar" method="post">
    <div class="mb-3">
        <label for="nome">Nome</label>
        <input type="text" asp-for="UsuarioNome" class="form-control" placeholder="Digite seu nome">
    </div>

        <div class="mb-3">
        <label for="nome">Login</label>
        <input type="text" asp-for="Login" class="form-control" placeholder="Digite seu nome">
    </div>
    <div class="mb-3">
        <label for="email">Email </label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite seu Email" />
    </div>
    <div class="mb-3">
        <label for="nome">Senha</label>
        <input type="text" asp-for="Senha" class="form-control" placeholder="Digite seu nome">
    </div>

    <div class="mb-3">
        <label for="nome">Perfil</label>
        <input type="text" asp-for="Perfil" class="form-control" placeholder="Digite seu nome">
    </div>

    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-primary ">Cadastrar Usuario</button>
        <a class="btn btn-secondary" asp-controller="Usuario" asp-action="Index" role="button">Voltar</a>
    </div>

</form>

